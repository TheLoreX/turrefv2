<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pageHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="232dp">

        <ImageView
            android:id="@+id/ITextWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/textwelcome"
            android:layout_width="249dp"
            android:layout_height="96dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/ImageLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/appicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/attachPanel_pH"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/listadderPanel_pH"
            android:layout_width="350dp"
            android:layout_height="245dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/TextWordCount"
                app:layout_constraintStart_toEndOf="@+id/ViewPole"
                app:layout_constraintTop_toTopOf="@+id/TextWord"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:elevation="1dp"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:textColor="#C1BDBA"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/TextFilename"
                app:layout_constraintStart_toStartOf="@+id/ViewCurrentlist"
                app:layout_constraintTop_toBottomOf="@+id/ViewCurrentlist"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginTop="-10dp"
                android:elevation="1dp"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:gravity="center"
                android:maxLines="1"
                android:shadowColor="@color/black"
                android:textAlignment="center"
                android:textColor="#C1BDBA"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/TextLinecount"
                app:layout_constraintStart_toEndOf="@+id/ViewPole"
                app:layout_constraintTop_toTopOf="@+id/TextLine"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:elevation="1dp"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:textColor="#C1BDBA"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/TextWord"
                app:layout_constraintEnd_toStartOf="@+id/ViewPole"
                app:layout_constraintTop_toTopOf="@+id/ViewPole"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:elevation="1dp"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:text="Words"
                android:textColor="#C1BDBA"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/TextLine"
                app:layout_constraintStart_toStartOf="@+id/TextWord"
                app:layout_constraintTop_toBottomOf="@+id/TextWord"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:elevation="1dp"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:text="@string/lines"
                android:textColor="#C1BDBA"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <View
                android:id="@+id/ViewCurrentlist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="110dp"
                android:layout_height="135dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/notepadframe"
                android:elevation="1dp" />

            <View
                android:id="@+id/FrameAttach"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/attachframe" />

            <View
                android:id="@+id/ViewPole"
                app:layout_constraintStart_toEndOf="@+id/ViewCurrentlist"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="2dp"
                android:layout_height="115dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/pole" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listadderPanel_pH"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ITextWelcome"
            android:layout_width="348.8dp"
            android:layout_height="67dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/listadder"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/ButtonAdd"
                app:layout_constraintBottom_toBottomOf="@+id/listadderPanel_pH"
                app:layout_constraintStart_toStartOf="@+id/listadderPanel_pH"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="149dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/addbutton"
                android:contentDescription="@string/todo"
                android:elevation="1dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/midPanel_pH"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="370dp"
            android:background="@drawable/midframe_ph">

            <TextView
                android:id="@+id/TextRecentlist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="190dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/textrecentlists"
                android:elevation="2dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewRecentList"
                android:layout_width="0dp"
                android:layout_height="235dp"
                android:paddingStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TextRecentlist" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
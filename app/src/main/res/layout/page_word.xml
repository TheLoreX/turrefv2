<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pageWord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage" >

    <View
        android:id="@+id/bottomPanel_pW"
        android:layout_width="409dp"
        android:layout_height="91dp"
        android:background="@drawable/palette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonBack"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottomPanel_pW"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/ButtonClue"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SwitchSide"
        app:layout_constraintStart_toEndOf="@+id/ButtonBack"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/SwitchSide"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/switchbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottomPanel_pW"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/transparent"></solid>
            <stroke android:color="#C2BEBB" android:width="3.5dp"></stroke>

            <corners android:radius="30dp"></corners>
            <size android:height="33dp" android:width="60dp"></size>
            <padding android:left="1dp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">

            <solid android:color="#A0A0A0"></solid>
            <padding android:right="1dp"/>
            <stroke android:color="#C2BEBB" android:width="3.5dp"></stroke>

            <corners android:radius="30dp"></corners>
            <size android:height="33dp" android:width="60dp"></size>
        </shape>
    </item>
</selector>